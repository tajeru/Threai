<!DOCTYPE html>
<html>
<head>
  <title>ThreaiApp</title>

   <link rel="icon" href="<%= asset_path('favicon.ico') %>" type="image/x-icon">
  <link rel="icon" href="<%= asset_path('favicon.png' )%>" type="image/png">
  <link rel="icon" href="<%= asset_path('favicon.svg') %>" type="image/svg+xml">

  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_importmap_tags %>
  <%= stylesheet_link_tag "application", "custom", "data-turbo-track": "reload" %>
  <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pulltorefreshjs/0.1.16/pulltorefresh.min.js"></script>
</head>
<body class= "bg-gray-800 text-light ">
<header>
  <nav class="navbar navbar-expand-lg bg-gray-800">
    <div class="container-fluid text-light">
      <%= link_to "Threai", "/posts/index", class: "navbar-brand text-light" %>
      <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span >
          <i class="bi bi-list" style="color: white;"></i>
        </span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if session[:user_id] %>
            <%= link_to 'About', '/about/top', class: 'nav-link text-light' %>
            <%= link_to 'Logout', '/users/logout', class: 'nav-link text-light' %>
          <% else %>
            <%= link_to 'Sign up', '/users/new', class: 'nav-link text-light' %>
            <%= link_to 'Login', '/users/login_form', class: 'nav-link text-light' %>
            <%= link_to 'About', '/about/top', class: 'nav-link text-light' %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>

 <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
        <%= link_to '', '/posts/index', class: 'bi bi-check2 mg_btn_r float-end btn_blue'%>
      </div>
    <% end %>

  <% if flash[:error] %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
        <%= link_to '', '/posts/index', class: 'bi bi-check2 mg_btn_r float-end btn_blue'%>
      </div>
    <% end %>

<%= yield %>

<script>
  PullToRefresh.init({
    mainElement: 'body', // プル・トゥ・リフレッシュが適用されるメイン要素
    onRefresh: function() {
      // ページをリロードする
      location.reload();
    }
  });
</script>
   <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>